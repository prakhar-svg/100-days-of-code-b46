#include <stdio.h>

int main() {
    int n, i, sum = 0;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    printf("First %d odd numbers are:\n", n);

    for (i = 1; i <= n; i++) {
        int odd = 2 * i - 1;   // ith odd number
        printf("%d ", odd);
        sum += odd;
    }

    printf("\nSum = %d\n", sum);

    return 0;
}

