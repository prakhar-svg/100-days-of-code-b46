#include <stdio.h>

int main() {
    int n;
    float sum = 0.0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    int numerator = 1;
    int denominator = 1;

    for (int i = 1; i <= n; i++) {
        sum += (float) numerator / denominator;

        numerator += 2;    
        denominator += 2;   
        if (i == 1) 
            denominator = 4;
        else
            denominator += 0;
    }

    printf("Sum of the series = %.4f", sum);

    return 0;
}
