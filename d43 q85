#include <stdio.h>

int main() {
    char str[100], rev[100];
    int i = 0, len = 0;

    printf("Enter a string: ");
    gets(str); 
    while(str[len] != '\0') {
        len++;
    }

    for(i = 0; i < len; i++) {
        rev[i] = str[len - 1 - i];
    }
    rev[len] = '\0';  

    printf("\nReversed string: %s\n", rev);

    return 0;
}
