#include <stdio.h>
#include <string.h>

int main() {
    char sentence[200];
    int maxLength = 0, length = 0;
    int startIndex = 0, maxStartIndex = 0;
    int i;

    printf("Enter a sentence: ");
    fgets(sentence, sizeof(sentence), stdin);

    for (i = 0; sentence[i] != '\0'; i++) {
        if (sentence[i] != ' ' && sentence[i] != '\n') {
            length++;
        } else {
            if (length > maxLength) {
                maxLength = length;
                maxStartIndex = startIndex;
            }
            length = 0;
            startIndex = i + 1;
        }
    }

    if (length > maxLength) {
        maxLength = length;
        maxStartIndex = startIndex;
    }

    printf("Longest word: ");
    for (i = maxStartIndex; i < maxStartIndex
